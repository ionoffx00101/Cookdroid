<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.coffee.exam_20170314.Ex01">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/btnStart"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="startFlipping()" />

    <Button
      android:id="@+id/btnStop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="stopFlipping()" />

  </LinearLayout>

  <ViewFlipper
    android:id="@+id/viewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:id="@+id/ex01_img1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/cupcake" />
    <ImageView
      android:id="@+id/ex01_img2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/donut" />
    <ImageView
      android:id="@+id/ex01_img3"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/froyo" />
    <ImageView
      android:id="@+id/ex01_img4"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/honeycomb" />
    <ImageView
      android:id="@+id/ex01_img5"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/gingerbread" />
  </ViewFlipper>
</LinearLayout>
